@model Category
@{
	ViewBag.pageTitle = "Category Management";
	ViewBag.CardTitle = "Delete Category";
}
<br />
@* action="/Admin/Category/DeleteCategory/" *@
@* href="@Url.Action("DeleteCategory", "Category", new { area = "Admin" }) *@
<form asp-action="DeleteCategory" asp-controller="Category" method="post">
	<input hidden asp-for="Id" />
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="mb-3">
		<label asp-for="Name"></label>
		<input asp-for="Name" disabled class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label asp-for="Description	"></label>
		<input asp-for="Description" disabled class="form-control" />
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<input type="submit" value="Delete" class="btn btn-danger" />
		<a href="/Admin/Category/Index/" class="btn btn-warning">Back to Index</a>
	</div>
</form>


@section scripts {
	<partial name="_ValidationScriptsPartial"></partial>
}

