@model IEnumerable<Category>
@{
	ViewBag.pageTitle = "Category Management";
	ViewBag.CardTitle = "view Category";
}
<a href="/Admin/Category/Create/" class="btn btn-primary">
	<i class="fa-solid fa-square-plus"></i>
	Create</a>
<br />
<table class="table table-hover" width="100%">
	<thead style="font-weight:bold">
		<tr>
			<td>Name</td>
			<td>Description</td>
			<td>Date Created</td>
			<td>Actions</td>
		</tr>
	</thead>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.Name</td>
			<td> @Html.Raw(item.Description)</td>
			<td>@item.CreateTime</td>
			<td>
				<div class="form-group">

					<a asp-controller="Category" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-success">Edit</a>
					@* <a href="/Category/Delete/@item.Id" class="btn btn-success">Edit</a> *@
					<a asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">Delete</a>
				</div>
			</td>
		</tr>
	}


</table>




