@model Category
@{
	ViewBag.pageTitle = "Category Management";
	ViewBag.CardTitle = "Create Category";
	// Layout = "/Views/Shared/_Dashboard.cshtml"; // in _ViewStart not need here 
}

<div class="row">
	<div class="col-md-4" >
		<form href="/Admin/Category/Create/" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group m-1">
				<label asp-for="Name"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group m-1">
				<label asp-for="Description	"></label>
				<textarea  asp-for="Description" class="form-control" ></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<br />
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
				<a href="/Admin/Category/Index/" class="btn btn-warning">Back to Index</a>
			</div>
		</form>
	</div>
</div>

